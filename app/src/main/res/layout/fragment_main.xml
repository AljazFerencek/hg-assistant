<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/db1_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="placeholder 1"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/weather_placeholder_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather placeholder text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="right" />



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <GridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/plants_grid" />

            <ImageView
                android:id="@+id/add_first_plant_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:padding="20dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:src="@android:drawable/ic_menu_add"
                android:clickable="true" />
            <TextView
                android:id="@+id/add_first_plant_txt"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/add_first_plant_img"
                android:text="@string/ad_first_plant"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </RelativeLayout>

    </LinearLayout>



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ad placeholder text"
        android:id="@+id/ads_placeholder"
        android:background="#ff1aff01" />

</LinearLayout>