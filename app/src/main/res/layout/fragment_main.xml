<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/db1_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="placeholder 1"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textViewWeatherPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather placeholder text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="right" />



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <GridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gridViewPlants" />

            <ImageView
                android:id="@+id/imageViewAddFirstPlant"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:padding="20dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:src="@android:drawable/ic_menu_add"
                android:clickable="true" />
            <TextView
                android:id="@+id/textViewAddFirstPlant"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ad_first_plant"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imageViewAddFirstPlant"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather"
                android:id="@+id/buttonWeatherChange"
                android:layout_marginTop="61dp"
                android:layout_below="@+id/textViewAddFirstPlant"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:enabled="true"
                android:onClick="changeWeatherPlaceholder" />
        </RelativeLayout>

    </LinearLayout>



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ad placeholder text"
        android:id="@+id/textViewAdsPlaceholder"
        android:background="#ff1aff01" />

</LinearLayout>